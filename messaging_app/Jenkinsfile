pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker-compose build web'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running Django tests...'
                sh 'docker-compose exec web python manage.py test'
            }
        }
    }
}
