pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building...'
                sh 'docker-compose build web'
            }
        }

        stage('Run Test') {
            steps {
                echo 'Running Django Tests...'
                sh 'docker-compose exec web python manage.py test'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running Django tests...'
                sh 'docker-compose exec web python manage.py test'
            }
        }
        // deploy stage
    }
}